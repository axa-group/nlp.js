{
  "name": "root",
  "description": "Library for NLU (Natural Language Understanding) done in Node.js",
  "scripts": {
    "coveralls": "jest --coverage && cat ./tests/coverage/lcov.info | coveralls",
    "postinstall": "lerna bootstrap",
    "lint": "eslint .",
    "lintfix": "eslint --fix .",
    "test": "eslint --fix . && jest --silent --coverage --maxWorkers=4 ."
  },
  "author": {
    "email": "jesus.seijas@axa.com",
    "name": "Jesus Seijas"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/axa-group/nlp.js.git"
  },
  "bugs": {
    "url": "https://github.com/axa-group/nlp.js/issues"
  },
  "maintainers": [
    {
      "email": "jesus.seijas@axa.com",
      "name": "Jesus Seijas"
    }
  ],
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "coveralls": "^3.0.7",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.19.0",
    "eslint-plugin-prettier": "^3.1.1",
    "https-proxy-agent": "^4.0.0",
    "jest": "^24.9.0",
    "lerna": "^3.18.3",
    "prettier": "^1.19.1"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/**.js",
      "!./packages/lang-**/**"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node"
  }
}
